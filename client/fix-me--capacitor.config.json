{
  "appId": "app.baderidris.com",
  "appName": "portfolio",
  "webDir": "dist",
  "bundledWebRuntime": false,
  "server": {
    "androidScheme": "https"
  },
  "plugins": {
    "CapacitorCookies": {
      "enabled": true
    },
    "CapacitorHttp": {
      "enabled": true
    },
    "SplashScreen": {
      "launchShowDuration": 1000,
      "launchAutoHide": true,
      "backgroundColor": "#000000",
      "androidScaleType": "CENTER_CROP",
      "showSpinner": true,
      "spinnerColor": "#ffffff",
      "splashFullScreen": true,
      "splashImmersive": true
    }
  },
  "android": {
    "splash": {
      "backgroundColor": "#000000",
      "showSpinner": true,
      "spinnerColor": "#ffffff",
      "androidScaleType": "CENTER_CROP"
    },
    "icons": {
      "72x72": "public/pwa-icons/72.png",
      "96x96": "public/pwa-icons/96.png",
      "128x128": "public/pwa-icons/128.png",
      "144x144": "public/pwa-icons/144.png",
      "152x152": "public/pwa-icons/152.png",
      "192x192": "public/pwa-icons/192.png",
      "384x384": "public/pwa-icons/384.png",
      "512x512": "public/pwa-icons/512.png"
    },
    "permissions": ["INTERNET", "ACCESS_NETWORK_STATE"]
  },
  "ios": {
    "splash": {
      "backgroundColor": "#000000",
      "showSpinner": true,
      "spinnerColor": "#ffffff",
      "iosScaleType": "CENTER_CROP"
    },
    "icons": {
      "72x72": "public/pwa-icons/72.png",
      "96x96": "public/pwa-icons/96.png",
      "128x128": "public/pwa-icons/128.png",
      "144x144": "public/pwa-icons/144.png",
      "152x152": "public/pwa-icons/152.png",
      "192x192": "public/pwa-icons/192.png",
      "384x384": "public/pwa-icons/384.png",
      "512x512": "public/pwa-icons/512.png"
    },
    "permissions": ["NSCameraUsageDescription", "NSLocationWhenInUseUsageDescription"]
  }
}
